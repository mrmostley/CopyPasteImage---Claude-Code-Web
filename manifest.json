{
  "manifest_version": 3,
  "name": "Claude Code Image Paste",
  "version": "1.0.0",
  "description": "Paste images into Claude Web Code - works on mobile & desktop Firefox!",
  
  "author": "Open Source Community",
  "homepage_url": "https://github.com/[your-username]/claude-code-image-paste",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "[email protected]",
      "strict_min_version": "120.0"
    }
  },
  
  "permissions": [
    "clipboardRead"
  ],
  
  "host_permissions": [
    "https://claude.ai/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://claude.ai/code/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
